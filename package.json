{
  "name": "sync-monorepo-packages",
  "version": "0.3.4",
  "description": "Synchronizes one or more fields between package.json files in a monorepo",
  "keywords": [
    "lerna",
    "monorepo",
    "package",
    "package.json",
    "sync",
    "synchronize",
    "copy",
    "metadata",
    "workflow",
    "manifest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/sync-monorepo-packages"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "main": "src/index.js",
  "bin": {
    "sync-monorepo-packages": "src/cli.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prerelease": "npm test",
    "release": "standard-version -a",
    "test": "markdownlint README.md && eslint . && npm run build"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{yml,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {
    "cp-file": "^9.1.0",
    "debug": "^4.1.1",
    "find-up": "^5.0.0",
    "globby": "^10.0.2",
    "load-json-file": "^6.2.0",
    "log-symbols": "^3.0.0",
    "pluralize": "^8.0.0",
    "read-pkg": "^5.2.0",
    "rfc6902": "^4.0.2",
    "rxjs": "^6.5.3",
    "term-size": "^2.1.0",
    "wrap-ansi": "^8.0.0",
    "write-pkg": "^4.0.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "17.0.24",
    "@types/pluralize": "0.0.29",
    "@types/wrap-ansi": "8.0.1",
    "@types/yargs": "17.0.10",
    "babel-eslint": "10.1.0",
    "del-cli": "4.0.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-semistandard": "15.0.1",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "6.0.0",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.31.1",
    "mocha": "6.2.3",
    "nyc": "15.1.0",
    "prettier": "2.3.1",
    "sinon": "11.1.2",
    "standard-version": "9.3.0",
    "type-fest": "1.2.0",
    "typescript": "4.6.3",
    "unexpected": "12.0.3",
    "unexpected-sinon": "11.0.1"
  },
  "engines": {
    "node": ">=12"
  },
  "types": "types/index.d.ts"
}
