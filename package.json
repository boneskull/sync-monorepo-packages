{
  "name": "sync-monorepo-packages",
  "version": "0.3.4",
  "description": "Synchronize files and metadata across packages in a monorepo",
  "keywords": [
    "lerna",
    "monorepo",
    "package",
    "package.json",
    "sync",
    "synchronize",
    "copy",
    "metadata",
    "workflow",
    "manifest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/sync-monorepo-packages"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "main": "src/index.js",
  "types": "types/src/index.d.ts",
  "bin": {
    "sync-monorepo-packages": "src/cli.js"
  },
  "files": [
    "src",
    "types/src/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "lint:md": "markdownlint README.md",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prerelease": "npm test",
    "release": "standard-version -a",
    "test": "npm run test:e2e && npm run build && npm run lint && npm run lint:md",
    "test:e2e": "mocha test/e2e"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{yml,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {
    "debug": "^4.1.1",
    "find-up": "^5.0.0",
    "fs-extra": "10.0.1",
    "globby": "10.0.2",
    "log-symbols": "^3.0.0",
    "pluralize": "^8.0.0",
    "read-pkg": "^5.2.0",
    "rfc6902": "^4.0.2",
    "rxjs": "^7.0.0",
    "term-size": "^2.1.0",
    "wrap-ansi": "^6.0.0",
    "write-pkg": "^4.0.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/fs-extra": "9.0.13",
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.24",
    "@types/pluralize": "0.0.29",
    "@types/sinon": "10.0.11",
    "@types/wrap-ansi": "3.0.0",
    "@types/yargs": "17.0.10",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0-1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "execa": "5.1.1",
    "husky": "7.0.4",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.31.1",
    "mocha": "6.2.3",
    "prettier": "2.6.2",
    "standard-version": "9.3.2",
    "type-fest": "2.12.2",
    "typescript": "4.6.3",
    "unexpected": "12.0.4"
  },
  "engines": {
    "node": ">=12"
  }
}
