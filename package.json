{
  "name": "sync-monorepo-packages",
  "version": "0.0.3",
  "description": "Synchronizes one or more fields between package.json files in a monorepo",
  "main": "src/index.js",
  "scripts": {
    "test": "markdownlint --ignore node_modules --ignore CHANGELOG.md . && eslint .",
    "prerelease": "npm test",
    "release": "standard-version"
  },
  "bin": {
    "sync-monorepo-packages": "src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/sync-monorepo-packages"
  },
  "keywords": [
    "lerna",
    "monorepo",
    "package",
    "package.json",
    "sync",
    "synchronize",
    "copy",
    "metadata",
    "workflow",
    "manifest"
  ],
  "files": [
    "src"
  ],
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "debug": "^4.1.1",
    "deep-equal": "^1.1.0",
    "find-up": "^4.1.0",
    "globby": "^10.0.1",
    "load-json-file": "^6.2.0",
    "log-symbols": "^3.0.0",
    "pluralize": "^8.0.0",
    "read-pkg": "^5.2.0",
    "rxjs": "^6.5.3",
    "term-size": "^2.1.0",
    "wrap-ansi": "^6.0.0",
    "write-pkg": "^4.0.0",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "markdownlint-cli": "^0.19.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sinon": "^7.5.0",
    "standard-version": "^7.0.0",
    "type-fest": "^0.8.1",
    "unexpected": "^11.8.0",
    "unexpected-sinon": "^10.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.yml": [
      "prettier --write",
      "git add"
    ],
    "README.md": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "endOfLine": "auto"
  }
}
