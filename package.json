{
  "name": "sync-monorepo-packages",
  "version": "0.3.2",
  "description": "Synchronizes one or more fields between package.json files in a monorepo",
  "keywords": [
    "lerna",
    "monorepo",
    "package",
    "package.json",
    "sync",
    "synchronize",
    "copy",
    "metadata",
    "workflow",
    "manifest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/sync-monorepo-packages"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "main": "src/index.js",
  "bin": {
    "sync-monorepo-packages": "src/cli.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "del-cli \"src/*.d.ts\" && tsc",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prerelease": "npm test",
    "release": "standard-version -a",
    "test": "markdownlint \"*.md\" && eslint ."
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{yml,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {
    "cp-file": "^9.1.0",
    "debug": "^4.1.1",
    "find-up": "^4.1.0",
    "globby": "^10.0.1",
    "load-json-file": "^6.2.0",
    "log-symbols": "^3.0.0",
    "pluralize": "^8.0.0",
    "read-pkg": "^5.2.0",
    "rfc6902": "^3.0.4",
    "rxjs": "^6.5.3",
    "term-size": "^2.1.0",
    "wrap-ansi": "^6.0.0",
    "write-pkg": "^4.0.0",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "del-cli": "^3.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^9.4.2",
    "markdownlint-cli": "^0.19.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sinon": "^7.5.0",
    "standard-version": "^8.0.1",
    "type-fest": "^0.8.1",
    "typescript": "^3.8.0-dev.20191101",
    "unexpected": "^11.8.0",
    "unexpected-sinon": "^10.11.2"
  },
  "engines": {
    "node": ">=12"
  }
}
