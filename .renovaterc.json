{
  "extends": ["config:base", ":semanticCommitTypeAll(chore)"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types"],
      "groupName": "types packages"
    }
  ],
  "semanticCommits": "enabled"
}
